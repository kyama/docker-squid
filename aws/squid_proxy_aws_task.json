{
  "family": "squid_proxy",
  "volumes": [
    {"name":"config",
     "host": {"sourcePath":"/home/conf"}
    },
    {"name":"cache",
     "host":{"sourcePath":"/srv/docker/squid/cache"}
    },
    {"name":"home",
     "host":{"sourcePath":"/home"}
    }
    ],
  "containerDefinitions": [
    {
      "name": "squid_proxy",
      "image": "042520414822.dkr.ecr.ap-northeast-1.amazonaws.com/squid-proxy",
      "memoryReservation": 100,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "squid_proxy",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "squid_proxy"
        }
      },
      "portMappings": [
	{
	  "containerPort": 3128,
	  "hostPort": 3128,
	  "protocol": "tcp"
	}
      ],
      "essential": true,
      "mountPoints": [
	{
	  "sourceVolume": "cache",
	  "containerPath": "/var/spool/squid"
	},
	{
	  "sourceVolume": "config",
	  "containerPath": "/etc/squid"
	},
	{
	  "sourceVolume": "home",
	  "containerPath": "/home"
	}
	  ]
    }
  ]
}
